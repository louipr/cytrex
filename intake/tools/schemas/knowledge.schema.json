{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Knowledge Schema",
  "type": "object",
  "required": ["metadata", "knowledge_domains"],
  "properties": {
    "metadata": {
      "type": "object",
      "required": ["iteration", "created", "source_documents"],
      "properties": {
        "iteration": {
          "type": "integer",
          "minimum": 0
        },
        "created": {
          "type": "string",
          "format": "date-time"
        },
        "source_documents": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "improvement_notes": {
          "type": "string"
        }
      }
    },
    "knowledge_domains": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["domain", "facts", "concepts"],
        "properties": {
          "domain": {
            "type": "string"
          },
          "facts": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["fact", "confidence", "source"],
              "properties": {
                "fact": {
                  "type": "string"
                },
                "confidence": {
                  "type": "number",
                  "minimum": 0,
                  "maximum": 1
                },
                "source": {
                  "type": "string"
                },
                "needs_evidence": {
                  "type": "boolean"
                }
              }
            }
          },
          "concepts": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["concept", "description", "confidence", "source"],
              "properties": {
                "concept": {
                  "type": "string"
                },
                "description": {
                  "type": "string"
                },
                "confidence": {
                  "type": "number",
                  "minimum": 0,
                  "maximum": 1
                },
                "source": {
                  "type": "string"
                },
                "synthesis_needed": {
                  "type": "boolean"
                }
              }
            }
          }
        }
      }
    }
  }
}
