{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Exam Schema",
  "description": "Schema for learning methodology exams with questions and solutions",
  "type": "object",
  "required": ["metadata", "questions", "solutions"],
  "properties": {
    "metadata": {
      "type": "object",
      "required": ["created", "version", "total_questions"],
      "properties": {
        "created": {
          "type": "string",
          "format": "date-time"
        },
        "version": {
          "type": "string"
        },
        "total_questions": {
          "type": "integer",
          "minimum": 0
        }
      }
    },
    "questions": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "type", "question", "category"],
        "properties": {
          "id": {
            "type": "string"
          },
          "type": {
            "$ref": "question-types.schema.json"
          },
          "question": {
            "type": "string"
          },
          "category": {
            "type": "string"
          },
          "difficulty": {
            "$ref": "difficulty-levels.schema.json"
          }
        }
      }
    },
    "solutions": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "answer", "evidence_sources"],
        "properties": {
          "id": {
            "type": "string"
          },
          "answer": {
            "type": "string"
          },
          "evidence_sources": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "explanation": {
            "type": "string"
          }
        }
      }
    }
  }
}
