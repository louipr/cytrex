{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Answers Schema",
  "type": "object",
  "required": ["metadata", "answers"],
  "properties": {
    "metadata": {
      "type": "object",
      "required": ["iteration", "created"],
      "properties": {
        "iteration": {
          "type": "string"
        },
        "created": {
          "type": "string",
          "format": "date-time"
        }
      }
    },
    "answers": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "question", "answer", "confidence", "reasoning"],
        "properties": {
          "id": {
            "type": "string"
          },
          "question": {
            "type": "string"
          },
          "answer": {
            "type": "string"
          },
          "confidence": {
            "type": "number",
            "minimum": 0,
            "maximum": 1
          },
          "reasoning": {
            "type": "string"
          }
        }
      }
    }
  }
}
