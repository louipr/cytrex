{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Score Schema",
  "type": "object",
  "required": ["metadata", "results"],
  "properties": {
    "metadata": {
      "type": "object",
      "required": ["iteration", "graded", "total_questions"],
      "properties": {
        "iteration": {
          "type": "string"
        },
        "graded": {
          "type": "string",
          "format": "date-time"
        },
        "total_questions": {
          "type": "integer",
          "minimum": 1
        }
      }
    },
    "results": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "question", "agent_answer", "correct_solution", "score", "analysis"],
        "properties": {
          "id": {
            "type": "string"
          },
          "question": {
            "type": "string"
          },
          "agent_answer": {
            "type": "string"
          },
          "agent_confidence": {
            "type": "number",
            "minimum": 0,
            "maximum": 1
          },
          "correct_solution": {
            "type": "string"
          },
          "score": {
            "type": "number",
            "minimum": 0,
            "maximum": 1
          },
          "analysis": {
            "type": "object",
            "required": ["correctness", "knowledge_gaps"],
            "properties": {
              "correctness": {
                "type": "string",
                "enum": ["correct", "partial", "incorrect"]
              },
              "knowledge_gaps": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "improvement_suggestions": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "summary": {
      "type": "object",
      "properties": {
        "overall_score": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        },
        "category_scores": {
          "type": "object"
        },
        "major_knowledge_gaps": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    }
  }
}
